<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <UseWPF>true</UseWPF>
        <RootNamespace>AITestProject</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <!--            TODO only use this once-->
        <None Include="$(SolutionDir)assets\LFW\**" CopyToOutputDirectory="PreserveNewest" LinkBase="assets\LFW"/>
        <None Include="$(SolutionDir)assets\*.tsv" CopyToOutputDirectory="PreserveNewest" LinkBase="assets"/>
        <None Include="$(SolutionDir)assets\skip\**" CopyToOutputDirectory="PreserveNewest" LinkBase="assets\skip"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Update="..\assets"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AITestProject.Backend\AITestProject.Backend.csproj"/>
    </ItemGroup>
</Project>